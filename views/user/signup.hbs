<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Create new Account</h2>
            <form action="/signup" method="POST">
                <div class="form-group">
                    <label for="exampleDropdownFormEmail1">Name</label>
                    <input type="text" class="form-control" name="Name" id="exampleDropdownFormEmail1"
                        placeholder="Enter Name">
                </div>
                <div class="form-group">
                    <label for="exampleDropdownFormEmail1">Email address</label>
                    <input type="email" class="form-control" name="Email" id="exampleDropdownFormEmail1"
                        placeholder="email@example.com">
                </div>
                <div class="form-group">
                    <label for="exampleDropdownFormPassword1">Password</label>
                    <input type="password" class="form-control" name="Password" id="exampleDropdownFormPassword1"
                        placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary">Sign in</button>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/login">Already have Account ?</a>
            </form>
        </div>
    </div>
</div>>    