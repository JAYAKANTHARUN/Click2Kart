<section>
    <a href="/admin/add-product" class="btn btn-success" style="margin-left:1200px;margin-top:20px;margin-bottom:-10px;">Add Product</a>
    <div class="container"><br><br>
        {{!-- <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success" style="margin-left:auto;">Add Product</a>
        </div> --}}
        <table class="table mt-4" id="productsTable">
            <thead>
                <tr>
                    <th scope="col">Slno</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th scope="col">Options</th>

                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>
                    <td><img style="width:50px;height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do You want to delete {{this.Name}} ?')">Delete</a>
                    </td>
                    
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</section>

<script>
    $(function (){
        $('#productsTable').DataTable()
    })
</script>